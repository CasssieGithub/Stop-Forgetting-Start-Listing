<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/bootstraplink.ejs") %>
    <!--  -->
    <%- include ("./partials/fonts.ejs") %>
  </head>
  <body>
    <div class="container">
      <h1 class="headingTop">Don't forget.</h1>
      <div class="heading">
        <a href="list/new" class="btn btn-outline-primary">
          Create a new category!
        </a>
        <div class="line"></div>
      </div>
      <br />
      <br />
      <div class="allListInformationDisplay">
        <% for (let i = 0; i < allListInformation.length; i++) { %>

        <div class="allListInformation">
          <div class="card" style="width: 18rem">
            <img
              src=" <%=allListInformation[i].img || 'https://i.imgur.com/mv6xUyy.jpg'; %>"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <a href="/list/<%=allListInformation[i].id%>"> </a>
              <a class="fs-1" href="/list/<%=allListInformation[i].id%>"
                ><%=allListInformation[i].name; %>
              </a>
              <br />
              <a class="fw-light" href="/list/<%=allListInformation[i].id%>">
                <%=allListInformation[i].date; %>
              </a>
            </div>
            <form
              class="deleteandEditBtn"
              action="/list/<%=allListInformation[i].id; %>?_method=DELETE"
              method="POST"
            >
              <input class="deleteButton" type="submit" value="Delete" />
              <a
                class="editBtn"
                href="/list/<%=allListInformation[i].id; %>/edit"
                >Edit</a
              >
            </form>
            <br />
          </div>
        </div>
        <%}%>
      </div>
      <%- include ("./partials/icons.ejs") %>
    </div>
  </body>
</html>
